---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { YouTube } from '@astro-community/astro-embed-youtube';

export interface Props {
	content: {
		title: string;
		description: string;
		pubDate?: string;
		updatedDate?: string;
		heroImage?: string;
        youTubeId?: string;
	};
}

const {
	content: { title, description, pubDate, updatedDate, heroImage, youTubeId },
} = Astro.props;
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
		<style>
			.title {
				font-size: 2em;
				margin: 0.25em 0 0;
			}
			hr {
				border-top: 1px solid #ddd;
				margin: 1rem 0;
			}
		</style>
	</head>

	<body>
		<Header />
		<main>
			<article>
				{heroImage && <img width={720} height={360} src={heroImage} alt="" />}
				<h1 class="title">{title}</h1>
				<hr />
				<slot />
			</article>
            {youTubeId && <YouTube id={youTubeId} poster="/cms.png" />}
		</main>
		<Footer />
	</body>
</html>
